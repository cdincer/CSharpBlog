
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


@model  MVCBlog.Models.UserModel
<div class="container">
    <h3>@ViewBag.Message</h3>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label for="inputUsername">Username</label>
            @Html.TextBoxFor(x => x.Email, new { @id = "inputUsername", @class = "form-control", @placeholder = "Enter Username" })
        </div>
        <div class="form-group">
            <label for="inputPassword">Password</label>
            @Html.PasswordFor(x => x.Password, new { @id = "inputPassword", @class = "form-control", @placeholder = "Enter Password" })
        </div>
    
        <input type="submit" name="name" class="btn btn-primary" value="Login" />
    }
</div>
