@using MVCBlog.Models
@model MVCBlog.Models.BlogPost

@{
    ViewBag.Title = "GetPage";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>GetPage</h2>

<div>
    <h4>BlogPost</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PostTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostContent)
        </dt>

        <dd>
            @Html.Raw( Model.PostContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostDate)
        </dd>

    </dl>
</div>
<p>

    @if ((UserModel)Session["MyUsers"] != null && ((UserModel)Session["MyUsers"]).UserRole == "Admin")
    {
        @Html.ActionLink("Editor", "Editor", "BlogEditor", new { id = Model.ID }, null)
    }


  
    @Html.ActionLink("Back to List", "Index")
</p>
